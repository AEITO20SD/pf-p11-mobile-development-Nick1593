<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mvvm="clr-namespace:Tamagotchi.ViewModels"
             xmlns:local="clr-namespace:Tamagotchi.CustomMarkup"
             x:Class="Tamagotchi.View.AddPet">
    <ContentPage.Content>
        <StackLayout>
            <ListView
                ItemsSource="{Binding PetTypes}"
                SelectedItem="{Binding SelectedPetType}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{local:EmbeddedImage Binding ImageTypes[5].URL }" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>